<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="phpList Coding Standard">
    <description>
        This standard requires PHP_CodeSniffer >= 3.5.2.
    </description>

    <arg name="colors"/>
    <arg name="extensions" value="php"/>

    <!-- The complete PSR-12 ruleset -->
    <rule ref="PSR12">
        <!-- We'll enable this rule once the line lengths are fixed. -->
        <exclude name="Generic.Files.LineLength"/>
        <!-- This rule requires PHP >= 7.1. -->
        <exclude name="PSR12.Properties.ConstantVisibility"/>
        <!-- This rule requires all classes to be namespaced. -->
        <exclude name="PSR1.Classes.ClassDeclaration"/>
        <!-- This rule requires all classes to be namespaced. -->
        <exclude name="Squiz.Classes.ValidClassName"/>
    </rule>
</ruleset>
