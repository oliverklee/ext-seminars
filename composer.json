{
    "name": "oliverklee/seminars",
    "description": "TYPO3 extension that allows you to create and manage a list of seminars, workshops, lectures, theater performances and other events, allowing front-end users to sign up. FE users also can create and edit events.",
    "type": "typo3-cms-extension",
    "keywords": [
        "seminars",
        "workshops",
        "event",
        "registration",
        "education",
        "talks"
    ],
    "homepage": "https://www.oliverklee.de/typo3-services/typo3-extensions/seminarmanager.html",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "typo3-coding@oliverklee.de",
            "homepage": "https://www.oliverklee.de",
            "role": "developer"
        }
    ],
    "support": {
        "issues": "https://github.com/oliverklee/ext-seminars/issues",
        "source": "https://github.com/oliverklee/ext-seminars"
    },
    "require": {
        "php": "^5.6.0 || ~7.0.0",
        "typo3/cms-core": "^7.6.23",
        "typo3/cms-frontend": "^7.6.23",
        "sjbr/static-info-tables": "^6.4.0",
        "oliverklee/oelib": "^2.0.0",
        "dmk/mkforms": "^3.0.14"
    },
    "require-dev": {
        "typo3/cms-scheduler": "^7.6.23",
        "helhum/typo3-console": "^4.6.1",

        "oliverklee/phpunit": "^5.3.0",
        "phpunit/phpunit": "^5.3.0"
    },
    "replace": {
        "seminars": "self.version",
        "typo3-ter/seminars": "self.version"
    },
    "autoload": {
        "classmap": [
            "Classes"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "Tests"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.typo3.org/"
        }
    ],
    "config": {
        "vendor-dir": ".Build/vendor"
    },
    "scripts": {
        "ci:php:lint": "find *.php Classes/ Configuration/ Migrations/ Tests/ -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
        "ci:tests:unit": ".Build/public/typo3/cli_dispatch.phpsh phpunit Tests/Unit/",
        "ci:tests:functional": ".Build/public/typo3/cli_dispatch.phpsh phpunit Tests/Functional/",
        "ci:tests": [
            "@ci:tests:unit",
            "@ci:tests:functional"
        ],
        "ci:dynamic": [
            "@ci:tests"
        ],
        "ci:static": [
            "@ci:php:lint"
        ],
        "ci": [
            "@ci:static",
            "@ci:dynamic"
        ],
        "link-extension": [
            "@php -r 'is_dir($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
            "@php -r 'file_exists($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/seminars\") || symlink(__DIR__,$extFolder);'"
        ],
        "post-autoload-dump": [
            "@link-extension"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        },
        "helhum/typo3-console": {
            "install-extension-dummy": "0"
        }
    }
}
