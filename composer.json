{
    "name": "oliverklee/seminars",
    "description": "TYPO3 extension that allows you to create and manage a list of seminars, workshops, lectures, theater performances and other events, allowing front-end users to sign up. FE users also can create and edit events.",
    "type": "typo3-cms-extension",
    "keywords": [
        "seminars",
        "workshops",
        "event",
        "registration",
        "education",
        "talks"
    ],
    "homepage": "https://www.oliverklee.de/typo3-services/seminarmanager/",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "typo3-coding@oliverklee.de",
            "homepage": "https://www.oliverklee.de",
            "role": "developer"
        }
    ],
    "support": {
        "issues": "https://github.com/oliverklee/ext-seminars/issues",
        "source": "https://github.com/oliverklee/ext-seminars"
    },
    "require": {
        "php": "~7.0 || ~7.1 || ~7.2",
        "ext-json": "*",
        "digedag/rn-base": "^1.8.7",
        "dmk/mkforms": "^3.0.21 || ^9.5.1",
        "oliverklee/oelib": "^3.0",
        "psr/http-message": "^1.0",
        "sjbr/static-info-tables": "^6.5",
        "typo3/cms-backend": "^8.7",
        "typo3/cms-core": "^8.7.9",
        "typo3/cms-extbase": "^8.7",
        "typo3/cms-fluid": "^8.7",
        "typo3/cms-frontend": "^8.7",
        "typo3/cms-lang": "^8.7"
    },
    "require-dev": {
        "helhum/typo3-console": "^5.7.2",
        "mikey179/vfsstream": "^1.6.8",
        "nimut/testing-framework": "^4.1.8",
        "oliverklee/phpunit": "^6.5.14",
        "phpspec/prophecy": "^1.9.0",
        "phpunit/phpunit": "^6.5.14",
        "typo3/cms-scheduler": "^8.7"
    },
    "conflict": {
        "sjbr/static-info-tables": "6.7.1"
    },
    "replace": {
        "typo3-ter/seminars": "self.version"
    },
    "autoload": {
        "classmap": [
            "Classes"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "Tests"
        ]
    },
    "prefer-stable": true,
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "process-timeout": 1000,
        "vendor-dir": ".Build/vendor"
    },
    "scripts": {
        "ci:php:lint": "find *.php Classes Configuration Tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
        "ci:tests:unit": "phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests/Unit",
        "ci:tests:unit-legacy": ".Build/vendor/bin/typo3 phpunit:run Tests/LegacyUnit",
        "ci:tests:functional": "find 'Tests/Functional' -wholename '*Test.php' | parallel --gnu 'echo; echo \"Running functional test suite {}\"; phpunit -c .Build/vendor/nimut/testing-framework/res/Configuration/FunctionalTests.xml {}';",
        "ci:tests": [
            "@ci:tests:unit",
            "@ci:tests:unit-legacy",
            "@ci:tests:functional"
        ],
        "ci:dynamic": [
            "@ci:tests"
        ],
        "ci:static": [
            "@ci:php:lint"
        ],
        "ci": [
            "@ci:static",
            "@ci:dynamic"
        ],
        "link-extension": [
            "@php -r 'is_dir($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
            "@php -r 'file_exists($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/seminars\") || symlink(__DIR__,$extFolder);'"
        ],
        "post-autoload-dump": [
            "@link-extension"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        },
        "typo3/cms": {
            "extension-key": "seminars",
            "web-dir": ".Build/public"
        },
        "helhum/typo3-console": {
            "install-extension-dummy": "0"
        }
    }
}
